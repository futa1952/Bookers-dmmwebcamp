<% if flash[:destroy] %>
<p class="destroy"><%= flash[:destroy] %></p>
<% end %>
<%= flash[:success] if flash[:success] %>

<h1> Books</h1>
<table>
  <thead>
    <tr>
      <th> Title </th>
      <th> Body </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td> <%= book.title %> </td>
      <td> <%= book.body %></td>
      <td> <%= link_to 'Show', book_path(book.id) %> </td>
      <td> <%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td> <%= link_to 'Destroy', book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure?' %> </td>
    </tr>
  </tbody>
  <% end %>
</table>

<h2> New Book</h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<p class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
<% @book.errors.full_messages.each do |message| %>
<p class="error"><%= message %></p>
<% end %>
<% end %>

<h5> Title</h5>
<%= f.text_field :title %>

<h5> Body</h5>
<%= f.text_area :body %>

<div class="btn"><%= f.submit "Create Book" %></div>
<% end %>